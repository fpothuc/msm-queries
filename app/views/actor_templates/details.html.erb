<h1>Actor <%= @the_actor.id %> details</h1>

<a href="/actors">Go back</a>

<dl>
  <dt>Name</dt>
  <dd><%= @the_actor.name %></dd>

  <dt>DoB</dt>
  <dd><%= @the_actor.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @the_actor.bio %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @the_actor.image %>" width="200"></dd>

</dl>


<% matching_characters = Character.where({ :actor_id => @the_actor.id}) %>

<h2>Filmography</h2>
<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>
  <% matching_characters.each do |a_character| %>
    <tr>
      <td><%= a_character.title %></td>
      <td><%= a_character.year %></td>
      <td><%= a_character.director_id %></td>
      <td><%= a_character.name %></td>
      <td><a href ="/movies/<%= a_character.id %>">Show details</td>
    </tr>
  <% end %>
